{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@components/*": ["frontend/components/*"],
      "@deploy/*": ["deploy/*"],
      "@deploy": ["deploy"],
      "@frontend/*": ["frontend/*"],
      "@frontend": ["frontend"],
      "@infrastructure/*": ["infrastructure/*"],
      "@infrastructure": ["infrastructure"],
      "@tdd/*": ["tdd/*"],
      "@scaffold/*": ["scaffold/*"],
      "@tools/*": ["tools/*"]
    },
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es5",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es5", "es6", "es7", "dom", "dom.iterable"],
    "jsx": "react",
    "rootDirs": ["src", "test"],
    "strict": true
  },
  "include": ["src/**/*", "test/**/*", "declarations.d.ts"],
  "exclude": ["dist", "examples", "node_modules"],
  "types": ["node"],
  "typeRoots": ["node_modules/@types"]
}
