{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@components/*": ["frontend/components/*"],
      "@frontend/*": ["frontend/*"],
      "@tdd/*": ["tdd/*"]
    },
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es6",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es5", "es6", "es7", "dom", "dom.iterable"],
    "jsx": "react",
    "rootDirs": ["src", "test"],
    "strict": true
  },
  "types": ["node"],
  "typeRoots": ["node_modules/@types"]
}
