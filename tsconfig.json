{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "jsx": "react",
    "jsxFactory": "createElement"
  },
  "include": [
      "src/**/*",
      "test/**/*"
  ],
  "lib": [ "es5", "es6", "es7", "dom", "dom.iterable" ],
  "types": ["node", "inferno"]
}